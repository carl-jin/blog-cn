// Header Section
// --------------------------------------------------
.header {
  background: $head-bg;
  height: 67px
  box-shadow: 0px 2px 10px 0px rgba(0,0,0,0.1), 0 1px rgba(0,0,0,0.1);
  background: #fafafa;
}

.header-inner {
  height: 100%
  margin: 0 auto;
  padding: 0px 0 0px;
  position: relative;
  width: $content-desktop;
  display :flex;
  flex-direction:row;

  .site-lang{
    position :absolute;
    right 0
    top 0
    bottom: 0
    display flex
    flex-direction row
    align-items center

    span{
      cursor: pointer;
      font-size 14px
      display block
      &:first-of-type{
        margin-right: 16px;
        position relative
        &::after{
          display block
          content:''
          height 14px
          width: 2px
          background $black-deep
          transform-origin center
          transform rotate(25deg)
          position absolute
          right: -8px;
          top: 7px;
        }
      }

      &.active{
        color: $black-deep
      }

      &:hover{
        text-decoration underline
      }
    }
  }

  +desktop-large() {
    .container & {
      width: $content-desktop-large;
    }
  }

  +desktop-largest() {
    .container & {
      width: $content-desktop-largest;
    }
  }
}

@import 'headerband';
@import 'site-meta';
@import 'site-nav';
@import 'menu';

@import 'bookmark' if (hexo-config('bookmark.enable'));

@import 'github-banner' if (hexo-config('github_banner.enable'));
