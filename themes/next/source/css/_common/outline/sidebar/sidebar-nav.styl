// Sidebar Navigation
.sidebar-nav {
  margin: 0 0 20px;
  padding-left: 0;

  li {
    border-bottom: 2px solid transparent;
    color: $sidebar-nav-color;
    cursor: pointer;
    display: inline-block;
    font-size: $font-size-small;

    &.sidebar-nav-overview {
      margin-left: 10px;
    }

    &:hover {
      color: $black-deep;
    }
  }

  .sidebar-nav-active {
    border-bottom-color: $black-deep;
    color: $black-deep;

    &:hover {
      color: $black-deep;
    }
  }
}

.sidebar-panel {
  display: none;
}

.sidebar-panel-active {
  display: block;
}
